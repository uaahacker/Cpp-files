
#include <iostream>

using namespace std;
int main()
{
    int f,c,c2,f2;
    string con;
    cout<< "hello world\n"<<endl;
    cout<< "This is a converter. It can convert C to F, and F to C\n";
    cout << "To start the program, type 'y' or 'n': "<<endl;
    cin >> con;
    while (con=="y")
    {
        //'farhanheit' to 'celsius' formula example we use 'c' as 'celsius' and 'f' as 'fahrenheit'.
    cout << "Enter temperature in 'fahrenheit' to convert in 'celsius': ";
    cin >> f;
    c = (f-32)*5/9;
    cout<< "Conveted value is: "<< c << endl;


    // 'celsius' to 'fahrenheit' formula now we use 'c2' as 'celsius' and 'f2' as 'fahrenheit'.
    cout << "Enter temperature in 'celsius' to convert in 'fahrenheit': ";
    cin >> c2;
    f2 = (c2 * 9/5) + 32;
    cout << "Converted value is: "<< f2 << endl;


    //ask for repeat
    cout << "want to repeat. type 'y' or 'n': "<<endl;
    cin >> con;

    }
   

    
    
    

    return 0;
}
